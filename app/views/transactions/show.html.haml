%table
  %tr
    %td= @transaction.date
    %td= @transaction.description
    %td= @transaction.display_value
    %td= @transaction.is_credit ? "credit" : "debit"

- if @transaction.explained?
  .panel
    Transaction explained
- else
  .panel
    = "Unexplained: #{number_to_currency(@transaction.unexplained_amount)}"
    %form#new_explaination_form
      TODO: add this form
    

- unless @transaction.explainations.empty?
  %h2 Explainations
  %table#table_explainations
    %thead
      %tr
        %td Reason
        %td Amount
    %tbody     
      - @transaction.explainations.each do |explaination|
        %tr
          %td= explaination.description
          %td= explaination.amount

