%h2 Add explaination

= form_for explaination, html: { id: "new_explaination_form" } do |f|
  = hidden_field :explaination, :transaction_id, value: transaction.id
  %div
    = f.label :description
    = f.text_field :description
  %div
    .large-3.columns
      = f.label :amount
      = f.number_field :amount

  .large-12.columns
    = f.submit 'Add explaination', class: 'button'
