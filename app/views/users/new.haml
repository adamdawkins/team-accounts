%h1 Create user

= form_for @user do |f|
  - if @user.errors.any?
    %ul
      - @user.errors.full_messages.each do |message|
        %li= message
  %div
    = f.label :email
    = f.text_field :email
  %div
    = f.label :password
    = f.text_field :password
  %div
    = f.label :password_confirmation
    = f.text_field :password_confirmation
  = f.submit value: 'Create User'
